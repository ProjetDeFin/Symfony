{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div id="login">
        <div class="d-flex">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div>
                    <h1 class="text-center">Login</h1>
                    <div class="d-flex direction-column align-start" id="email-input">
                        <label for="username">Email *</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="d-flex direction-column align-start" id="password-input">
                        <label for="password">Password *</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>
                    <a href="/admin/reset_password">forgot password</a>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button type="submit">
                    Se connecter
                </button>
            </form>
            <img class="" src="{{ asset('images/background-login.jpg') }}" alt="">
        </div>
    </div>
{% endblock %}
